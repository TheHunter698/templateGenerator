
<link type='text/css' rel='stylesheet' href='/stylesheets/registerStyles.css'>
 <form action="/register" method="POST">
        <table class="table">
            <tr>
                <td><h3>Register new User</h3></tr>
            </tr>
            <tr>
                <td>
                    <input type="text" name="name" value="Name" class="input" required>
                </td>
                <td>
                    <input type="text" name="surname" value="Surname" class="input" required>
                </td>
            </tr>
            <tr>
              <td>
                <select name="countries" required>
                   <option value="spain">Spain</option>
                </select>
              </td>
              <td style="width: 1%"><label><strong>Date of Birth</strong></label>
                <input type="date" name="dateB" class="input" required>
              </td>
            </tr>
            <tr>
                <td><label><strong>Email</strong></label>
                    <input type="text" name="username" value="Userame" class="input usernameBox" required>
                </td> 
                <td>
                    <input type="password" name="password" value="Password" class="input passwordBox" required>
                </td>
            </tr> 
             <tr>
                <td style='width: 1%'><br>
                    <label>Why are you using this generator</label>
                    <select name="usage">
                        <option value="studies">Studies</option>
                        <option value="professional">Professional Work</option>
                        <option value="other">Other not specified</option>
                    </select>
                </td>
                <td>
                    <label>Email</label>
                    <input type="email" name="email" value="email">
                </td>
            </tr>
            <tr>
                <td><input type="submit" value="Register" class="submitButton"></td>
            </tr>
           
        </table>
    </form>